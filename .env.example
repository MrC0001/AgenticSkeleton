# AgenticSkeleton - Environment Configuration File
# Copy this file to .env to get started:
# cp .env.example .env

# ==== Mode Configuration ====
# Set to "true" for local development with mock responses (default)
# Set to "false" to use Azure OpenAI in production
MOCK_RESPONSES=true

# ==== Azure OpenAI Configuration ====
# Only required when MOCK_RESPONSES=false
# Your Azure OpenAI endpoint URL (e.g., https://your-resource.openai.azure.com/)
AZURE_OPENAI_ENDPOINT=

# Your Azure OpenAI API key
AZURE_OPENAI_KEY=

# ==== Model Configuration ====
# The deployment name of the model to use for planning tasks
# This is the name you gave to the deployment in Azure OpenAI Studio
MODEL_PLANNER=gpt-4

# The deployment name of the model to use for execution tasks
# Can be the same as MODEL_PLANNER
MODEL_EXECUTOR=gpt-4

# ==== Server Configuration ====
# Port the Flask server will listen on
PORT=8000

# Flask environment (development or production)
FLASK_ENV=development

